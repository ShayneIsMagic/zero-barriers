---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Contact Us | Zero Barriers"
  description="Contact Zero Barriers - Begin your transformation journey. Get in touch to achieve rapid, substantial, and sustainable growth."
>
  <body>
    <Header />

    <!-- Hero Section -->
    <section class="contact-hero">
      <div class="container">
        <div class="contact-img">
          <img src="/images/mountain-sunset.png" alt="Contact visualization" />
        </div>
        <div class="section-title">
          <h1>Form Submitted</h1>
          <p>Thank you for reaching out. We'll be in touch soon!</p>
        </div>
        <a href="/" class="cta-button">Go back to Home</a>
      </div>
    </section>

    <Footer />
  </body>
</Layout>
