        text-align: center;
        margin-bottom: 60px;
      }
      
      .section-title h2 {
        font-size: 36px;
        font-weight: 700;
        color: var(--black);
        margin-bottom: 20px;
      }
      
      .section-title p {
        font-size: 18px;
        color: var(--secondary);
        max-width: 600px;
        margin: 0 auto;
      }
      
      /* Methodology Section */
      .methodology-section {
        padding: 100px 0;
        background: var(--light-gray);
      }
      
      .methodology-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        margin-top: 60px;
      }
      
