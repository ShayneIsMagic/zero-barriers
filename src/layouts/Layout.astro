      .purpose-image img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }
      
      /* FAQ Section */
      .faq-section {
        padding: 100px 0;
        background: var(--light-gray);
      }
      
      .faq-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 30px;
        margin-top: 60px;
      }
      
      .faq-item {
        background: var(--white);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
      }
      
      .faq-item h3 {
        font-size: 20px;
        font-weight: 600;
        color: var(--black);
        margin-bottom: 15px;
      }
      
      .faq-answer p {
        color: var(--secondary);
        line-height: 1.6;
      }
      
      /* CTA Section */
      .cta-section {
        padding: 100px 0;
        background: var(--primary-dark);
        color: var(--white);
        text-align: center;
      }
      
      .cta-section h2 {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 20px;
      }
      
      .cta-section p {
        font-size: 18px;
        margin-bottom: 40px;
        opacity: 0.9;
      }
      
      .white-cta {
        background: var(--white);
        color: var(--primary-dark);
        padding: 15px 30px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: var(--transition);
        display: inline-block;
        margin-bottom: 20px;
      }
      
      .white-cta:hover {
        background: var(--light-gray);
        transform: translateY(-2px);
      }
      
      .secondary-white-cta {
        color: var(--white);
        text-decoration: none;
        font-weight: 500;
        transition: var(--transition);
      }
      
      .secondary-white-cta:hover {
        opacity: 0.8;
      }
      
      /* Footer */
      footer {
        background: var(--black);
        color: var(--white);
        padding: 60px 0 30px;
      }
      
      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        margin-bottom: 40px;
      }
      
      .footer-section h3 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
      }
      
      .footer-section ul {
        list-style: none;
      }
      
      .footer-section ul li {
        margin-bottom: 10px;
      }
      
      .footer-section ul li a {
        color: var(--white);
        text-decoration: none;
        opacity: 0.8;
        transition: var(--transition);
      }
      
      .footer-section ul li a:hover {
        opacity: 1;
        color: var(--primary);
      }
      
      .footer-bottom {
        border-top: 1px solid #333;
        padding-top: 30px;
        text-align: center;
        opacity: 0.8;
      }
      
      /* Responsive Design */
      @media (max-width: 768px) {
        .mobile-menu-toggle {
          display: block !important;
        }
        
        .nav-links {
          display: none;
        }
        
        .hero-container {
          grid-template-columns: 1fr;
          gap: 40px;
        }
        
        .hero-title {
          font-size: 32px;
        }
        
        .hero-cta {
          flex-direction: column;
          gap: 15px;
        }
        
        .section-title h2 {
          font-size: 28px;
        }
        
        .methodology-grid,
        .solutions-grid,
        .partnerships-grid {
          grid-template-columns: 1fr;
        }
        
        .purpose-content {
          grid-template-columns: 1fr;
          gap: 40px;
        }
        
        .faq-grid {
          grid-template-columns: 1fr;
        }
        
        .cta-section h2 {
          font-size: 28px;
        }
      }
    </style>
    
